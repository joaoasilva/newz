		x:Class="newz.Views.ArticleDetailView"
		xmlns:Utils="clr-namespace:newz.Utils;assembly=newz">
	<ContentPage.Content>
		<StackLayout>
			<WebView x:Name="Browser" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" HeightRequest="1000" WidthRequest="1000" Navigating="webOnNavigating" Navigated="webOnEndNavigating" />
